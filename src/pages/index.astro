    <script>
        function getRandomArbitrary(min: number, max: number) {
            return Math.random() * (max - min) + min;
        }

        const nightDiv = document.getElementById('night');

        for (let index = 0; index < 75; index++) {
            const animationDelay = getRandomArbitrary(100, 3500);
            const randomNumberTop = getRandomArbitrary(-50, 100);
            const randomNumberLeft = getRandomArbitrary(-50, 100);

            const shootingStarDiv = document.createElement('div');
            shootingStarDiv.classList.add('shooting_star');

            function setProperty(left: number, top: number, animationDelay: number) {
                shootingStarDiv.style.left = `${left}%`;
                shootingStarDiv.style.top = `${top}%`;
                shootingStarDiv.style.animationDelay = `${animationDelay}ms`;
            }
            function changeAnimationTime() {
                setProperty(randomNumberLeft, randomNumberTop, animationDelay);
            }
            changeAnimationTime();
            nightDiv?.appendChild(shootingStarDiv);
        }

